<?xml version="1.0" encoding="utf-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:charts="clr-namespace:LightningGraph.Views;assembly=LightningGraph"
    xmlns:local="clr-namespace:LightningGraph" 
    x:Class="LightningGraph.LightningGraphPage">
    <!-- MasterView -->
    <Grid>

        <StackLayout
            Padding="20, 40"
            Orientation="Vertical"
            Spacing="10" 
            BackgroundColor="#EEEEEE">
            <Label 
                Text="Welcome to cool Data Vizualization!" 
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <charts:ChartView x:Name="chart1" HeightRequest="140" BackgroundColor="White" />
            <charts:ChartView x:Name="chart2" HeightRequest="140" BackgroundColor="White" />
        </StackLayout>
            
        <Grid
          x:Name="FlashView"
          IsVisible="false"
          BackgroundColor="White"/>
        
    </Grid>
</ContentPage>
